@model CarDealership2.ViewModels.AddModelVM

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Model</title>
</head>
<body>
    <div style="padding-top: 25px;" class="container">
        <h2 strong>Add Make</h2>
        <div style="border-style: groove;" class="row">
            <div style="padding-top: 25px;padding-bottom: 25px;" class="col-xs-12">
                @using (Html.BeginForm("Models", "Admin", FormMethod.Post))
                {
                <div class="form-group">
                    <label for="ModelName"> Model </label>
                    @Html.TextBoxFor(m => m.model.ModelName, new { @class = "form-horizontal", placeholder = "enter model" })

                    <label>Make</label>
                    @Html.DropDownListFor(m => m.SelectedMakeId, Model.Makes, new { @class = "form-horizontal" })

                    <button type="submit" class="btn btn-sm btn-primary">Save</button>

                </div>
                    
                    @*<div class="form-group">
                        <label>Make</label>
                        @Html.DropDownListFor(m => m.SelectedMakeId, Model.Makes, new { @class = "form-control" })

                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                    </div>*@



                    <span class="text-danger">@Html.ValidationMessageFor(m => m.model.ModelName)</span>
                }

            </div>
        </div>
    </div>

    <div style="padding-top: 25px; " class="container">
        <div class="row">
            <div class="col-xs-4">
                <table class=" table table-bordered table-striped table-hover" style="width: auto;">
                    <thead>
                        <tr>
                            @*<th>Make Name</th>*@
                            <th>Model Name</th>
                            <th>Date Added</th>
                            <th>User</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.models)
                        {
                        <tr>
                            <td>@m.ModelName </td>
                            <td>@m.DateAdded</td>
                            <td>@m.currentUserEmail</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>


</body>
</html>
