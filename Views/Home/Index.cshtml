
@model CarDealership2.ViewModels.HomeIndexVM
@{int specialsCount = 0;}
@{int featuresCount = 0;}
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    
    @*<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="..." alt="First slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="..." alt="Second slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="..." alt="Third slide">
            </div>
        </div>
    </div>*@
    
    
    
    <div class="container">
        <div class="row">


            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    @foreach (var special in Model.specials)
                    {
                        if (specialsCount == 0)

                        {
                    <div class="item active" style="height: 350px;">
                        <a href="/Home/Specials">
                            <img class="d-block w-100" style="width: 100%; height: 100%;" src="/images/BKG3.jpg" alt="slide @specialsCount.ToString()">
                            <div class="carousel-caption">

                                <H2 style="color: white">@special.Title </H2>
                                <p style="color: white">@special.Description</p>
                            </div>
                        </a>
                    </div>


                        }

                        else
                        {
                <div class="item" style="height: 350px;">
                    <a href="/Home/Specials">
                        <img class="d-block w-100" style ="width: 100%; height: 100%;" src="/images/BKG3.jpg" alt="slide @specialsCount.ToString()">
                    
                    <div class="carousel-caption">

                        <H2 style="color: white">@special.Title </H2>
                        <p style="color: white">@special.Description</p>
                    </div>
                    </a>


                </div>
                        }

                        specialsCount++;
                    }
                </div>
            </div>

        </div>
    </div>

  
    <div class="container">
        <h2>Featured Vehicles</h2>
        <div class="row">
            <div style="display: flex; flex-wrap: wrap;" class="flex-container">

                @foreach (var featured in Model.featuredVehicles)
                {

                    @*line-height: 75px; *@
                    <div style="border-style: groove; background-color: #f1f1f1; width: 175px; margin: 10px; padding-top: 20px; text-align: center; font-size: 14px; ">

                        <div class="row">
                            @*src=/Uploads/@Model.Vehicle.PhotoPath*@
                            @*<img src="/images/Fiat.jpg " alt="dollar sign" style="width:100px" class="center">*@
                            <img src=/Uploads/@featured.PhotoPath alt ="dollar sign" style="width:100px" class="center">


                        </div>

                        <div class="row">

                            <b>@featured.Year @featured.MakeName @featured.VehicleModelName</b>
                            <b>@featured.MRSP</b>
                        </div>

                    </div>

                }
            </div>


        </div>
    </div>
</body>
</html>
