
@model CarDealership2.ViewModels.HomeIndexVM
@{int specialsCount = 0;}
@{int featuresCount = 0;}
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    
    @*<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="..." alt="First slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="..." alt="Second slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="..." alt="Third slide">
            </div>
        </div>
    </div>*@
    
    
    
    <div class="container">
        <div class="row">


            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="padding-top: 30px; ">
                <div class="carousel-inner">

                    @foreach (var special in Model.specials)
                    {
                        if (specialsCount == 0)

                        {
                    <div class="item active" style="height: 350px; background-color: black; ">
                        <a href="/Home/Specials">
                            @*<img class="d-block w-100" style="width: auto; height: 100%; display: block;margin-left: auto; margin-right: auto;
                            "src="/images/banner2large.jpg" alt="slide @specialsCount.ToString()">*@
                            @*<div class="carousel-caption">*@
                            <div class="carousel-inner" style="text-align: center; padding: 150px 0;">

                                <H1 style="color: white; font-size: 40px;"><b>@special.Title</b> </H1>
                                @*<p style="color: white; font-size: 18px;">@special.Description</p>*@
                            </div>
                        </a>
                    </div>


                        }

                        else
                        {
                <div class="item" style=" height: 350px; background-color: black;">
                    <a href="/Home/Specials">
                        @*<img class="d-block w-100" style ="width: 100%; height: 100%;" src="/images/confetti.jpg" alt="slide @specialsCount.ToString()">*@
                      <div class="carousel-inner" style="text-align: center; padding: 150px 0;"> 
                        <H1 style="color: white; font-size: 40px;">@special.Title </H1>
                        @*<p style="color: white; font-size: 18px">@special.Description</p>*@
                    </div>


                    </a>


                </div>
                        }

                        specialsCount++;
                    }
                </div>
            </div>

        </div>
    </div>

  
    <div class="container">
        <h2>Featured Vehicles</h2>
        <div class="row">
            <div style="display: flex; flex-wrap: wrap;" class="flex-container">

                @foreach (var featured in Model.featuredVehicles)
                {

                    @*line-height: 75px; *@
                    <div style="border-style: groove; background-color: #f1f1f1; width: 270px; height: auto; margin: 10px; padding-top: 20px; text-align: center; font-size: 14px; ">

                        <div class="row">
                            @*src=/Uploads/@Model.Vehicle.PhotoPath*@
                            @*<img src="/images/Fiat.jpg " alt="dollar sign" style="width:100px" class="center">*@
                            <img src=/Uploads/@featured.PhotoPath alt ="featured vehicle" style="width:150px; height:100%;" class="center">


                        </div>

                        <div class="row">

                            <b>@featured.Year @featured.MakeName @featured.VehicleModelName</b>
                            <b>@featured.MRSP</b>
                        </div>

                    </div>

                }
            </div>


        </div>
    </div>
</body>
</html>
