@model CarDealership2.ViewModels.SalesReportVM

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SalesReport</title>
</head>
<body>
    <div style="padding-top: 25px; " class="container">
        <div class="row">
            <h2>Sales Report</h2>

            <div style="margin-top:20px; padding-top:20px; border:groove" class="container" >
                <div class="row">
                    @using (Html.BeginForm("SalesReport", "Reports", FormMethod.Post))
                    {
                        <form class="form-inline">

                            <div class="form-group col-md-4">

                                <label for="Users"> Users </label>
                                @Html.DropDownListFor(m => m.SelectedUserId, Model.Users, "-Select-", new { @class = "form-horizontal", name = "User", id = "User", placeholder = "-All-" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.SelectedUserId)</span>

                            </div>


                            <div class="form-group col-md-4">
                                <label for="FromDate"> From Date </label>
                                @Html.TextBoxFor(m => m.Date1, new {@class = "form-horizontal",  type ="Date"})
                                @*<input type="text" id="from-date" class="form-horizontal" style="width:150px;" value="" placeholder="date1" />*@
                            </div>

                            <div class="form-group col-md-4">
                                <label for="ToDate"> To Date </label>
                                @Html.TextBoxFor(m => m.Date2, new { @class = "form-horizontal", type = "Date" })
                                @*<input type="text" id="to-date" class="form-horizontal" style="width:150px;" value="" placeholder="date2" />*@
                            </div>



                        <div class="form-row col-md-4">
                            <div class="form-group col-md-10">
                                <button type="submit" class="btn btn-md btn-primary">Search</button>
                            </div>
                        </div>
                        </form>

                    }

                </div>
            </div>

                        <div class="col-md-4" style="margin-top:5px; padding-top:5px; ">

                            <table class=" table table-bordered table-striped table-hover" style="width: auto;">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Total Sales</th>
                                        <th>Total Vehicles</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model.ListOfSales)
                                    {
                                        <tr>
                                            <td>@p.UserName</td>
                                            <td>@p.TotalSales</td>
                                            <td>@p.NumberOfSales</td>


                                            @*<td>@Roles.GetRolesForUser(user.UserName).FirstOrDefault();</td>*@
                                            @*<td>@user.Roles.Where(u => u.UserId == user.Id).GetRolesForUser().GetFirstOrDefault();</td>*@
                                            @*get the role that matches the userid*@

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
</body>
</html>
