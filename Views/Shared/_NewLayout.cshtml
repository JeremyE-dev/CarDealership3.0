<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CarDealership2</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SG Motors", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("New Inventory", "New", "Inventory")</li>
                    <li>@Html.ActionLink("Used Inventory", "Used", "Inventory")</li>
                    <li>@Html.ActionLink("Specials", "Specials", "Home")</li>
                    <li>@Html.ActionLink("Contact", "ContactUs", "Home")</li>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        @*<li>@Html.ActionLink("Admin", "Makes", "Admin")</li>*@
                        //--also will add reports to this list
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin  <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">

                                <li><a href="/Admin/Vehicles">Vehicle Inventory</a></li>
                                <li><a href="/Admin/AddVehicle">Add Vehicle</a></li>
                                <li><a href="/Admin/Users">Users</a></li>
                                <li><a href="/Admin/Makes">Makes</a></li>
                                <li><a href="/Admin/Models">Models</a></li>
                                <li><a href="/Admin/AddSpecial">Add Special</a></li>
                            </ul>
                        </li>

                        @*<li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li> *@


                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("sales") || User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Sales", "SalesIndex", "Sales")</li>
                    }

                    </li>
                    @Html.Partial("_Login")
</div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
